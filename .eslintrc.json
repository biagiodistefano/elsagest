{
    "parser": "babel-eslint",
    "extends": ["eslint:recommended", "airbnb-base"],
    "plugins": ["babel"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "env": {
        "browser": true,
        "amd": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "$": true,
        "Cookies": true,
        "jsPDF": true,
        "commonUtils": true,
        "WikEdDiff": true
    },
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "webpack_config/webpack.dev.js"
            }
        }
    },
    "rules": {
        "strict": 0,
        "comma-dangle": [
          0
        ],
        "space-before-function-paren": 0,
        "arrow-parens": ["error", "as-needed"],
        "no-plusplus": 0,
        "no-lonely-if": 0,
        "max-len": 0,
        "no-continue": 0,
        "no-underscore-dangle": ["error", { "allowAfterThis": true }],
        "spaced-comment": 0,
        "no-await-in-loop": 0,
        "one-var-declaration-per-line": ["error", "initializations"],
        "one-var": 0,
        "function-paren-newline": 0,
        "no-underscore-dangle": 0,
        "no-mixed-operators": 0,
        "prefer-destructuring": ["error", {
          "array": false,
          "object": true
        }, {
          "enforceForRenamedProperties": false
        }]
    }
}
